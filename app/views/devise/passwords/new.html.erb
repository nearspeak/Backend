<div class="col-sm-4 col-sm-offset-4">
	<h1 class="text-center title"><%=t('devise_forgot_password')%></h1>
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		
	<div class="form-group">
		<div class="controls with-icon-over-input">
			<%= f.email_field :email, :autofocus => true, :placeholder => t('devise_email'), :class => 'form-control' %>
			<i class="icon-user text-muted"></i>
		</div>
	</div>
		
	<%= f.submit t('devise_resend_password'), :class => 'btn btn-lg btn-primary btn-block' %>
	<% end %>
	
	<%= render :partial => 'devise/shared/links' %>
</div>