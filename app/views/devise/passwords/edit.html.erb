<div class="col-sm-4 col-sm-offset-4">
	<h1 class="text-center title"><%=t('devise_change_password')%></h1>
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	<%= f.hidden_field :reset_password_token %>
		
    <div class="form-group">
      <div class="controls with-icon-over-input">
        <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
        <i class="icon-lock text-muted"></i>
      </div>
    </div>
    <div class="form-group">
      <div class="controls with-icon-over-input">
        <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', :class => 'form-control' %>
        <i class="icon-lock text-muted"></i>
      </div>
    </div>
		
	<%= f.submit t('devise_change_my_password'), :class => 'btn btn-lg btn-primary btn-block' %>
	<% end %>
	
	<%= render :partial => 'devise/shared/links' %>
</div>