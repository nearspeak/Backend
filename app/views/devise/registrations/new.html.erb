<div class="col-sm-4 col-sm-offset-4">
  <h1 class="text-center title">Sign up</h1>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'validate-form'}) do |f| %>

      <div class="form-group">
        <div class="controls with-icon-over-input">
          <%= f.email_field :email, :autofocus => true, :placeholder => 'E-mail', :class => 'form-control' %>
          <i class="icon-user text-muted"></i>
        </div>
      </div>
      <div class="form-group">
        <div class="controls with-icon-over-input">
          <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
          <i class="icon-lock text-muted"></i>
        </div>
      </div>
      <div class="form-group">
        <div class="controls with-icon-over-input">
          <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', :class => 'form-control' %>
          <i class="icon-lock text-muted"></i>
        </div>
      </div>
      <div class="form-group">
        <div class="controls with-icon-over-input">
          <%= f.text_field :first_name, :autofocus => true, :placeholder => 'First name', :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="controls with-icon-over-input">
          <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Last name', :class => 'form-control' %>
        </div>
      </div>

      <%= f.hidden_field :cms_lang, :value => 'en' %>

      <%= f.submit 'Sign up', :class => 'btn btn-lg btn-primary btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>

</div>