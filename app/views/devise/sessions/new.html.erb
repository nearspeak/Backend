<div class="col-sm-4 col-sm-offset-4">
  <h1 class="text-center title"><%=t('devise_signin')%></h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'validate-form'}) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :placeholder => t('devise_email'), :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder => t('devise_password'), :class => 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <%= t('devise_remember_me') %>
      <% end %>
      </div>
      
      <% end %>

      <%= f.submit t('devise_signin'), :class => 'btn btn-lg btn-primary btn-block' %>
  <% end %>

  <%= render :partial => 'devise/shared/links' %>
</div>