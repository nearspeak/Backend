<% unless tags.nil? %>
    <% if tags.count > 0 %>
        <div class="panel panel-default" style="margin-bottom:10px;">
          <div class="panel panel-heading">
            <div class="title">
              <i class="fa fa-comment"></i>
              <%= Tag.model_name.human(:count => 2).titleize %>
            </div>
          </div>
          <div class="panel panel-default panel-body">
            <table class="table table-striped">
              <thead>
              <tr>
                <th><%= Tag.human_attribute_name(:name) %></th>
                <th><%= Tag.human_attribute_name(:description) %></th>
                <th><%=t 'helpers.actions', :default => t('helpers.actions') %></th>
              </tr>
              </thead>
              <tbody>

              <% tags.each do |tag| %>
                  <tr>
                    <% unless tag.original_name.nil? %>
                        <td><%= tag.original_name.text %></td>
                    <% end %>
                    <td><%= tag.description %></td>
                    <td>
                      <%= link_to(edit_tag_path(tag, :tag_id => tag.id), :class => 'btn btn-default') do %>
                          <i class="fa fa-pencil"></i>
                      <% end %>

                    </td>
                  </tr>
              <% end %>

              </tbody>
            </table>
          </div>
        </div>
    <% end %>
<% end %>