<h1>Listing hardware_locations</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hardware_locations.each do |hardware_location| %>
      <tr>
        <td><%= hardware_location.latitude %></td>
        <td><%= hardware_location.longitude %></td>
        <td><%= link_to 'Show', hardware_location %></td>
        <td><%= link_to 'Edit', edit_hardware_location_path(hardware_location) %></td>
        <td><%= link_to 'Destroy', hardware_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

